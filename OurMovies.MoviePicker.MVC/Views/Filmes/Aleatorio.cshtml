
@{
    ViewBag.Title = "Filme aleatório";
}


@section scripts{
    @Scripts.Render("~/bundles/aleatorio")
}
<div class="col-sm-10 offset-sm-1 col-lg-8 offset-lg-2">
    <div class="row justify-content-center mb-5">
        <span class="h2">Filme qualquer</span>
    </div>
    <div class="row mb-5">
        <div class="col-10 offset-1">
            <div class="form-group">
                <label for="cmbCategorias">categorias</label>
                <select multiple="true" v-model="categoriasSelecionadas" class="form-control selectpicker" data-style="btn btn-link" id="cmbCategorias">
                    <option v-for="categoria in categorias" :key="categoria.Id" v-bind:value="categoria.Id">{{categoria.Nome}}</option>
                </select>
            </div>  
        </div>               
    </div>     

    <div v-if="filmeAleatorio != null">
        <movie-card :filme="filmeAleatorio"></movie-card>
    </div>
    

    <div class="row">
        <div class="col-10 offset-1">
            <div class="row">
                <button type="button" class="btn btn-primary btn-round ml-auto" v-on:click="carregarFilmeAleatorio"><i class="material-icons">shuffle</i> rodar novamente</button>
            </div>
        </div>         
    </div>
</div>
