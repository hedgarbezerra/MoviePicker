<movie-add-card :callback="fazerRequestFilmes"></movie-add-card>

<div class="row mb-5">   
    <div class="col-sm-10 offset-sm-1 col-lg-8 offset-lg-2">
        <div class="row">
            <div class="col-lg-10 col-sm-10">
                <div class="form-group label-floating has-feedback">
                    <label class="control-label">nome do filme</label>
                          <input type="text"  placeholder="pesquisar..." class="form-control"  v-model="searchTerm" />
                    <span class="form-control-feedback">
                    <i class="material-icons">search</i>
                    </span>
                  </div>
            </div>
            <div class="col-lg-2 col-sm-2">
                <button type="button" class="btn btn-primary btn-fab btn-fab-mini btn-round" data-toggle="modal" data-target="#novoFilmeModal">
                    <i class="material-icons">add_to_queue</i>
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <div class="form-check form-check-inline">
                    <label class="form-check-label">
                      <input class="form-check-input" type="checkbox" id="chkFilmesAssistidos" v-model="searchAssistidos"> filmes assistidos 
                      <span class="form-check-sign">
                          <span class="check"></span>
                      </span>
                    </label>
                  </div>
            </div>
            <div class="col-6">

            </div>
        </div>

    </div>  
</div>

<transition-group v-if="listaFilmesFiltrados.length > 0" name="slide-fade" tag="div" >
    
    <div class="row" v-for="filme in listaFilmesFiltrados" :key="filme.Id">
        <div class="col-sm-10 offset-sm-1 col-lg-8 offset-lg-2">
            <div class="card">
                <div class="card-header card-header-rose">
                    <div class="card-icon">
                        <i class="material-icons" v-if="diferencaDias(filme.DtAdicionado) >= -2">new_releases</i>
                        <i class="material-icons" v-if="filme.Nota > 3">favorite</i>
                        <i class="material-icons">hd</i>
                        <i class="material-icons" v-if="filme.Assistido">visibility</i>
                    </div>
                </div>
                <div class="card-body text-center">
                    <h4> {{ filme.Nome }}</h4>
                    <p class="card-text category"><strong>categoria(s):</strong>
                            <span v-if="filme.Categorias.length > 0">{{  filme.Categorias | categorias-concat }}</span>
                            <span v-else>esse filme não possuí categorias</span>
                        </p>
                    <p class="card-text" v-if="!!filme.Descricao"><strong>descrição:</strong> {{ filme.Descricao }}</p>   

                    <div class="text-center card-avaliacao" v-if="filme.Nota > 0">
                        <h4>avaliação:</h4>
                        <i class="material-icons" v-for="i in filme.Nota">favorite</i>
                    </div>                    
                    <div class="text-center" v-else> 
                        <h4> filme não avaliado</h4>
                    </div>
                    <br/>      
                    <button type="button" class="btn btn-primary btn-round"  data-toggle="modal" data-target="#assistirModal"  v-bind:data-filme="filme.Id" v-bind:disabled="filme.Assistido">
                        <i class="material-icons">play_circle_outline</i>
                        assistir
                    </button>
                    <button type="button" class="btn btn-primary btn-round"  data-toggle="modal" data-target="#avaliarModal"  v-bind:data-filme="filme.Id" v-bind:disabled="filme.Nota > 0 || !filme.Assistido">
                        <i class="material-icons">edit</i>avaliar
                    </button>  

                    <div class="card-footer text-muted"> {{ filme.DtAdicionado | from-now}} </div>
                </div>
            </div>
        </div>  
        <movie-avaliacao v-bind:filme="filme"></movie-avaliacao>  
    </div>
</transition-group>
<transition v-else>
    <div class="row">
        <div class="col-lg-8 offset-lg-2 col-sm-10 offset-sm-1">
            <div class="text-center">
                <h3 class="no-content"> não encontramos seus filmes... </h3>
                <img src="/Content/img/movie-gif.gif" class="img-raised rounded img-fluid" alt="image background">
            </div>
        </div>
    </div>
</transition>






